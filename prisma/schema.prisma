// schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  orders Order[]
}

model Order {
  id         Int      @id @default(autoincrement())
  name       String   
  product    String
  quantity   Int
  customerId Int
  Customer   Customer @relation(fields: [customerId], references: [id])
}
